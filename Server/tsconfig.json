{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "outDir": "./dist",
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "../shared/*",
                "shared/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/types/**/*.d.ts",
        "shared/**/*.ts",
        "../shared/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}